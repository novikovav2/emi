
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email,
                      class: 'form-control devise_input__first',
                      placeholder: 'Электронная почта',
                      required: true,
                      autofocus: true,
                      autocomplete: "email" %>
  </div>

    <%= f.password_field :password,
                         class: 'form-control devise_input__last',
                         placeholder: 'Пароль',
                         required: true,
                         autocomplete: "current-password" %>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'Запомнить меня' %>
    </div>
  <% end %>

  <div class="field">
    <%= f.submit "Вход", class: 'btn btn-primary w-100'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
