<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email,
                      class: 'form-control devise_input__first',
                      placeholder: 'Электроная почта',
                      required: true,
                      autofocus: true,
                      autocomplete: "email" %>

    <%= f.password_field :password,
                         class: 'form-control devise_input',
                         placeholder: 'Пароль',
                         required: true,
                         autocomplete: "new-password" %>

    <%= f.password_field :password_confirmation,
                         class: 'form-control devise_input__last',
                         placeholder: 'Подтвердите пароль',
                         required: true,
                         autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.submit "Зарегистрироваться", class: 'btn btn-primary w-100' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
