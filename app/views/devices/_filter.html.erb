<div class="collapse mt-2" id="Filter">
  <div class="card card-body pt-0 pb-1">
    <%= form_with url: devices_path, method: :get, local: true do |form| %>
      <div class="form-row mb-2">
        <div class="form-group col-xl-3 mb-0">
          <%= form.label :device, 'Название', class: 'col-form-label-sm pb-0'%>
          <%= form.select :device, options_for_select(@devices_list.collect {|x| [x.name, x.id]}, request.params['device']),
                          { include_blank: true },
                          class: 'form-control form-control-sm',
                          id: 'device' %>
        </div>
        <div class="form-group col-xl-3 mb-0">
          <%= form.label :box, 'Стойка', class: 'col-form-label-sm pb-0'%>
          <%= form.select :box, options_for_select(@boxes.collect {|x| [x.name, x.id]}, request.params['box']),
                          { include_blank: true },
                          class: 'form-control form-control-sm',
                          id: 'box' %>
        </div>
      </div>

      <div class="actions">
        <%= form.submit 'Искать', class: 'btn btn-secondary btn-sm' %>
      </div>

    <% end %>
  </div>
</div>
