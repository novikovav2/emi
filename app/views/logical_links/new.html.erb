<%= link_to 'Отмена', logical_links_path, class: 'btn btn-outline-secondary btn-sm mb-3' %>

<div class="row">
  <div class="col-xl-12">
    <div class="card">
      <div class="card-body">
        <%= form_with(model: @logical_link, local: true) do |form| %>
          <div class="row">
            <div class="col-xl-6">
              <h4>Начало</h4>
              <div class="form-group row">
                <%= form.label :from_device, 'Оборудование', class: 'col-sm-3 col-form-label' %>
                <div class="col-sm-9">
                  <%= form.select :from_device,
                                  options_for_select(@devices.collect {|i| [i.name, i.id]}, ),
                                  { include_blank: true },
                                  class: 'form-control',
                                  id: 'from-device' %>
                </div>
              </div>
              <div class="form-group row">
                <%= form.label :from_node, 'Порт', class: 'col-sm-3 col-form-label' %>
                <div class="col-sm-9">
                  <%= form.select :from_node,
                                  %w(),
                                  {}, class: 'form-control',
                                  disabled: true,
                                  required: true,
                                  id: 'from-interface' %>
                </div>
              </div>
            </div>
            <div class="col-xl-6">
              <h4>Конец </h4>
              <div class="form-group row">
                <%= form.label :to_device, 'Оборудование', class: 'col-sm-3 col-form-label' %>
                <div class="col-sm-9">
                  <%= form.select :to_device,
                                  options_for_select(@devices.collect {|i| [i.name, i.id]}, ),
                                  { include_blank: true},
                                  class: 'form-control',
                                  id: 'to-device' %>
                </div>
              </div>
              <div class="form-group row">
                <%= form.label :to_node, 'Порт', class: 'col-sm-3 col-form-label' %>
                <div class="col-sm-9">
                  <%= form.select :to_node,
                                  %w(),
                                  {}, class: 'form-control',
                                  disabled: true,
                                  required: true,
                                  id: 'to-interface' %>
                </div>
              </div>
            </div>
          </div>

          <div class="actions">
            <%= form.submit 'Сохранить', class: 'btn btn-secondary'  %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'logical-links-new' %>




