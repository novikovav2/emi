<div class="d-flex justify-content-between">
  <div class="ml-0">
    <%= link_to 'Назад', logical_links_path, class: 'btn btn-outline-secondary mr-2 btn-sm' %>
  </div>
  <div class="mr-0">
    <%= link_to 'Удалить', @logical_link, method: :delete, data: { confirm: 'Are you sure?' },
                class: 'btn btn-outline-danger btn-sm' %>
  </div>
</div>

<div class="row mt-3">
  <div class="col-xl-12">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-6">
            <p class="mb-0 text-muted font-weight-bold text-uppercase">
              Физически подключена
            </p>
            <p class="mb-0">
              <%= pretty_status(@logical_link.connected?) %>
            </p>
          </div>
          <div class="col-6">
            <p class="mb-0 text-muted font-weight-bold text-uppercase">

            </p>
            <p class="mb-0">

            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row mt-3">
  <div class="col-xl-6">
    <div class="card">
      <div class="card-body">
        <p class="mb-0 text-muted font-weight-bold text-uppercase">
          Начало
        </p>
        <p class="mb-0">
          <span class="text-black-50">Стойка:</span> <%= @logical_link.from_node.device.box.name %>
        </p>
        <p class="mb-0">
          <span class="text-black-50">Патчпанель:</span> <%= @logical_link.from_node.device.name %>
        </p>
        <p class="mb-0">
          <span class="text-black-50">Интерфейс:</span> <%= @logical_link.from_node.name %>
        </p>
      </div>
    </div>
  </div>
  <div class="col-xl-6">
    <div class="card">
      <div class="card-body">
        <p class="mb-0 text-muted font-weight-bold text-uppercase">
          Конец
        </p>
        <p class="mb-0">
          <span class="text-black-50">Стойка:</span> <%= @logical_link.to_node.device.box.name %>
        </p>
        <p class="mb-0">
          <span class="text-black-50">Патчпанель:</span> <%= @logical_link.to_node.device.name %>
        </p>
        <p class="mb-0">
          <span class="text-black-50">Интерфейс:</span> <%= @logical_link.to_node.name %>
        </p>
      </div>
    </div>
  </div>
</div>

<div class="row mt-3">
  <div class="col-xl-12">
    <div class="card">
      <div class="card-body">
        <table class="table table-striped table-sm">
          <thead>
          <tr>
            <th>Тип</th>
            <th>Начало (стойка)</th>
            <th>Начало (устройство)</th>
            <th>Начало (Порт)</th>
            <th>Конец (стойка)</th>
            <th>Конец (устройство)</th>
            <th>Конец (Порт)</th>
            <th>Уже подключено?</th>
          </tr>
          </thead>
          <tbody>
          <% @relations.each do |relation| %>
            <tr>
              <td><%= relation["type"] %></td>
              <td><%= relation["from"].owner.box.name %></td>
              <td><%= relation["from"].owner.name %></td>
              <td><%= relation["from"].name %></td>
              <td><%= relation["to"].owner.box.name %></td>
              <td><%= relation["to"].owner.name %></td>
              <td><%= relation["to"].name %></td>
              <td><%= pretty_status(relation["connected"]) %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


