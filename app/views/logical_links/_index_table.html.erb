<table class="table table-striped table-sm">
  <thead>
  <tr>
    <th>
      <%= render 'layouts/column_header', human_name: 'Оборудование', sort_name: 'from_device' %>
    </th>
    <th>
      <%= render 'layouts/column_header', human_name: 'Порт', sort_name: 'from_interface' %>
    </th>
    <th>
      <%= render 'layouts/column_header', human_name: 'Оборудование', sort_name: 'to_device' %>
    </th>
    <th>
      <%= render 'layouts/column_header', human_name: 'Порт', sort_name: 'to_interface' %>
    </th>
    <th>Материал</th>
    <th>Физически подключены?</th>
    <th>Действия</th>
  </tr>
  </thead>

  <tbody>
  <% logical_links.each do |logical_link| %>
    <tr>
      <td><%= link_to logical_link.from_node.device.name, device_path(logical_link.from_node.device.id) %></td>
      <td><%= logical_link.from_node.name %></td>
      <td><%= link_to logical_link.to_node.device.name, device_path(logical_link.to_node.device.id) %></td>
      <td><%= logical_link.to_node.name %></td>
      <td><%= human_material(logical_link.from_node.material) %></td>
      <td><%= pretty_status(logical_link.connected?) %></td>
      <td>
        <%= link_to logical_link, class: 'text-muted text-right mr-3' do %>
          <i class="far fa-eye"></i>
        <% end %>
        <%= link_to logical_link, method: :delete, data: { confirm: 'Are you sure?' },
                    class: 'text-muted text-right' do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= render 'layouts/paginator', items_number: @logical_links_count,
           current_page: @page,
           limit: @limit %>