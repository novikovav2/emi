<table class="table table-striped table-sm">
  <thead>
  <tr>
    <th>
      <% if @current_sort == 'from_device' %>
        <%= link_to request.params.merge(sort: 'from_device', order: 1 - @current_order ), class: 'thead_sort' do %>
          Оборудование <%= sort_angle(@current_order) %>
        <% end %>
      <% else %>
        <%= link_to 'Оборудование', request.params.merge(sort: 'from_device', order: 0 ), class: 'thead'%>
      <% end %>
    </th>
    <th>
      <% if @current_sort == 'from_interface' %>
        <%= link_to request.params.merge(sort: 'from_interface', order: 1 - @current_order ), class: 'thead_sort' do %>
          Порт <%= sort_angle(@current_order) %>
        <% end %>
      <% else %>
        <%= link_to 'Порт', request.params.merge(sort: 'from_interface', order: 0 ), class: 'thead'%>
      <% end %>
    </th>
    <th>
      <% if @current_sort == 'to_device' %>
        <%= link_to request.params.merge(sort: 'to_device', order: 1 - @current_order ), class: 'thead_sort' do %>
          Оборудование <%= sort_angle(@current_order) %>
        <% end %>
      <% else %>
        <%= link_to 'Оборудование', request.params.merge(sort: 'to_device', order: 0 ), class: 'thead'%>
      <% end %>
    </th>
    <th>
      <% if @current_sort == 'to_interface' %>
        <%= link_to request.params.merge(sort: 'to_interface', order: 1 - @current_order ), class: 'thead_sort' do %>
          Порт <%= sort_angle(@current_order) %>
        <% end %>
      <% else %>
        <%= link_to 'Порт', request.params.merge(sort: 'to_interface', order: 0 ), class: 'thead'%>
      <% end %>
    </th>
    <th>Материал</th>
    <th>Физически подключены?</th>
    <th>Действия</th>
  </tr>
  </thead>

  <tbody>
  <% logical_links.each do |logical_link| %>
    <tr>
      <td><%= link_to logical_link.from_node.device.name, device_path(logical_link.from_node.device.id) %></td>
      <td><%= logical_link.from_node.name %></td>
      <td><%= link_to logical_link.to_node.device.name, device_path(logical_link.to_node.device.id) %></td>
      <td><%= logical_link.to_node.name %></td>
      <td><%= logical_link.from_node.material %></td>
      <td><%= logical_link.connected? %></td>
      <td>
        <%= link_to logical_link, class: 'text-muted text-right mr-3' do %>
          <i class="far fa-eye"></i>
        <% end %>
        <%= link_to logical_link, method: :delete, data: { confirm: 'Are you sure?' },
                    class: 'text-muted text-right' do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= render 'layouts/paginator', items_number: @logical_links_count,
           current_page: @page,
           limit: @limit %>