<%= form_with(model: logical_link, local: true) do |form| %>
  <% if logical_link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(logical_link.errors.count, "error") %> prohibited this logical_link from being saved:</h2>

      <ul>
        <% logical_link.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :from_node, 'From' %>
    <%= form.select :from_node,
                    interfaces.collect {|i| [i.device.name + ' (' + (i.name) + ')',
                                                            i.id]},
                    {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :to_node, 'To' %>
    <%= form.select :to_node,
                    interfaces.collect {|i| [i.device.name + ' (' + (i.name) + ')',
                                                i.id]},
                    {}, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Сохранить', class: 'btn btn-secondary'  %>
  </div>
<% end %>
