<%= link_to 'Отмена', cables_path, class: 'btn btn-outline-secondary btn-sm mb-3' %>

<div class="row">
  <div class="col-xl-12">
    <div class="card">
      <div class="card-body">
        <%= form_with(model: @cable, local: true) do |form| %>
          <div class="row">
            <div class="col-xl-6">
              <h4>Начало</h4>
              <div class="form-group row">
                <%= form.label :from_room, 'Помещение', class: 'col-sm-2 col-form-label' %>
                <div class="col-sm-10">
                  <%= form.select :from_room,
                                  options_for_select(@rooms.collect {|i| [i.name, i.id]}, ),
                                  { include_blank: true },
                                  class: 'form-control',
                                  id: 'from-room' %>
                </div>
              </div>
              <div class="form-group row">
                <%= form.label :from_box, 'Стойка', class: 'col-sm-2 col-form-label' %>
                <div class="col-sm-10">
                  <%= form.select :from_box,
                                  %w(),
                                  {}, class: 'form-control',
                                  disabled: true,
                                  id: 'from-box' %>
                </div>
              </div>
              <div class="form-group row">
                <%= form.label :from_patchpanel, 'Патчпанель', class: 'col-sm-2 col-form-label' %>
                <div class="col-sm-10">
                  <%= form.select :from_patchpanel,
                                  %w(),
                                  {}, class: 'form-control',
                                  disabled: true,
                                  id: 'from-patchpanel' %>
                </div>
              </div>
              <div class="form-group row">
                <%= form.label :from_node, 'Порт', class: 'col-sm-2 col-form-label' %>
                <div class="col-sm-10">
                  <%= form.select :from_node,
                                  %w(),
                                  {}, class: 'form-control',
                                  disabled: true,
                                  required: true,
                                  id: 'from-interface' %>
                </div>
              </div>
              <div class="form-group row">
                <%= form.label :length, 'Длина', class: 'col-sm-2 col-form-label' %>
                <div class="col-sm-10">
                  <%= form.number_field :length, class: 'form-control', placeholder: 'Длина кабеля', min: 1, max: 120%>
                </div>
              </div>
            </div>
            <div class="col-xl-6">
              <h4>Конец </h4>
              <div class="form-group row">
                <%= form.label :to_room, 'Помещение', class: 'col-sm-2 col-form-label' %>
                <div class="col-sm-10">
                  <%= form.select :to_room,
                                  options_for_select(@rooms.collect {|i| [i.name, i.id]}, ),
                                  { include_blank: true},
                                  class: 'form-control',
                                  id: 'to-room' %>
                </div>
              </div>
              <div class="form-group row">
                <%= form.label :to_box, 'Стойка', class: 'col-sm-2 col-form-label' %>
                <div class="col-sm-10">
                  <%= form.select :to_box,
                                  %w(),
                                  {}, class: 'form-control',
                                  disabled: true,
                                  id: 'to-box' %>
                </div>
              </div>
              <div class="form-group row">
                <%= form.label :to_patchpanel, 'Патчпанель', class: 'col-sm-2 col-form-label' %>
                <div class="col-sm-10">
                  <%= form.select :to_patchpanel,
                                  %w(),
                                  {}, class: 'form-control',
                                  disabled: true,
                                  id: 'to-patchpanel' %>
                </div>
              </div>
              <div class="form-group row">
                <%= form.label :to_node, 'Порт', class: 'col-sm-2 col-form-label' %>
                <div class="col-sm-10">
                  <%= form.select :to_node,
                                  %w(),
                                  {}, class: 'form-control',
                                  disabled: true,
                                  required: true,
                                  id: 'to-interface' %>
                </div>
              </div>
            </div>
          </div>

          <div class="actions">
            <%= form.submit 'Сохранить', class: 'btn btn-secondary'  %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'cables-new' %>

