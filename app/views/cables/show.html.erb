<div class="d-flex justify-content-between">
  <div class="ml-0">
    <%= link_to 'Назад', 'javascript:history.back()', class: 'btn btn-outline-secondary mr-2 btn-sm' %>
    <%= link_to 'Редактировать', edit_cable_path(@cable), class: 'btn btn-secondary btn-sm' %>
  </div>
  <div class="mr-0">
    <%= link_to 'Удалить', @cable, method: :delete, data: { confirm: 'Are you sure?' },
                class: 'btn btn-outline-danger btn-sm' %>
  </div>
</div>

<div class="row mt-3">
  <div class="col-xl-12">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-6">
            <p class="mb-0 text-muted font-weight-bold text-uppercase">
              Длина
            </p>
            <p class="mb-0">
              <%= @cable.length %>м
            </p>
          </div>
          <div class="col-6">
            <p class="mb-0 text-muted font-weight-bold text-uppercase">
              Тип
            </p>
            <p class="mb-0">
              <%= human_material(@cable.material) %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row mt-3">
  <div class="col-xl-6">
    <div class="card">
      <div class="card-body">
        <p class="mb-0 text-muted font-weight-bold text-uppercase">
          Начало
        </p>
        <p class="mb-0">
          <span class="text-black-50">Стойка:</span> <%= link_to @cable.from_node.patchpanel.box.name, box_path(@cable.from_node.patchpanel.box) %>
        </p>
        <p class="mb-0">
          <span class="text-black-50">Патчпанель:</span> <%= link_to @cable.from_node.patchpanel.name, patchpanel_path(@cable.from_node.patchpanel) %>
        </p>
        <p class="mb-0">
          <span class="text-black-50">Интерфейс:</span> <%= @cable.from_node.name %>
        </p>
      </div>
    </div>
  </div>
  <div class="col-xl-6">
    <div class="card">
      <div class="card-body">
        <p class="mb-0 text-muted font-weight-bold text-uppercase">
          Конец
        </p>
        <p class="mb-0">
          <span class="text-black-50">Стойка:</span> <%= link_to @cable.to_node.patchpanel.box.name, box_path(@cable.to_node.patchpanel.box) %>
        </p>
        <p class="mb-0">
          <span class="text-black-50">Патчпанель:</span> <%= link_to @cable.to_node.patchpanel.name, patchpanel_path(@cable.to_node.patchpanel) %>
        </p>
        <p class="mb-0">
          <span class="text-black-50">Интерфейс:</span> <%= @cable.to_node.name %>
        </p>
      </div>
    </div>
  </div>
</div>



