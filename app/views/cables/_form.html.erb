<%= form_with(model: cable, local: true) do |form| %>
  <% if cable.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cable.errors.count, "error") %> prohibited this cable from being saved:</h2>

      <ul>
        <% cable.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :from_node, 'From', class: 'col-sm-1 col-form-label' %>
    <div class="col-sm-11">
      <%= form.select :from_node, options_for_select(
          interfaces.collect {|i| [i.patchpanel.box.name + ': ' + i.patchpanel.name + ' (' + (i.name) + ')' + ' - ' + i.material.to_s,
                                   i.id]}, cable.from_node.id),
                      {}, class: 'form-control', disabled: disabled %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :to_node, 'To', class: 'col-sm-1 col-form-label' %>
    <div class="col-sm-11">
      <%= form.select :to_node, options_for_select(
          interfaces.collect {|i| [i.patchpanel.box.name + ': ' + i.patchpanel.name + ' (' + (i.name) + ')' + ' - ' + i.material.to_s,
                                   i.id]}, cable.to_node.id),
                      {}, class: 'form-control', disabled: disabled %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :length, 'Длина', class: 'col-sm-1 col-form-label' %>
    <div class="col-sm-11">
      <%= form.text_field :length, class: 'form-control', placeholder: '5' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Сохранить', class: 'btn btn-secondary'  %>
  </div>
<% end %>
