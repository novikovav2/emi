<table class="table table-striped table-sm">
  <thead>
  <tr>
    <th>
      <%= render 'layouts/column_header', human_name: 'Название', sort_name: 'name' %>
    </th>
    <th>
      <%= render 'layouts/column_header', human_name: 'Помещение', sort_name: 'room' %>
    </th>
    <th>Действия</th>
  </tr>
  </thead>

  <tbody>
  <% boxes.each do |box| %>
    <tr>
      <td><%= link_to box[:name], box_path(box[:id]) %></td>
      <td><%= link_to box[:room_name], room_path(box[:room_id]) %></td>
      <td>
        <%= link_to edit_box_path(box[:id]), class: 'text-muted text-right mr-3' do %>
          <i class="far fa-edit"></i>
        <% end %>
        <%= link_to box_path(box[:id]), method: :delete, data: { confirm: 'Are you sure?' },
                    class: 'text-muted text-right' do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= render 'layouts/paginator', items_number: @boxes_count,
           current_page: @page,
           limit: @limit %>