<table class="table table-striped table-sm">
  <thead>
  <tr>
    <th>
      <% if @current_sort == 'name' %>
        <%= link_to request.params.merge(sort: 'name', order: 1 - @current_order ), class: 'thead_sort' do %>
          Название <%= sort_angle(@current_order) %>
        <% end %>
      <% else %>
        <%= link_to 'Название', request.params.merge(sort: 'name', order: 0 ), class: 'thead'%>
      <% end %>
    </th>
    <th>
      <% if @current_sort == 'room' %>
        <%= link_to request.params.merge(sort: 'room', order: 1 - @current_order ), class: 'thead_sort' do %>
          Помещение <%= sort_angle(@current_order) %>
        <% end %>
      <% else %>
        <%= link_to 'Помещение', request.params.merge(sort: 'room', order: 0 ), class: 'thead'%>
      <% end %>
    </th>
    <th>Действия</th>
  </tr>
  </thead>

  <tbody>
  <% boxes.each do |box| %>
    <tr>
      <td><%= link_to box.name, box %></td>
      <% if  box.room %>
        <td><%= link_to box.room.name, box.room %></td>
      <% else %>
        <td>-</td>
      <% end %>
      <td>
        <%= link_to edit_box_path(box), class: 'text-muted text-right mr-3' do %>
          <i class="far fa-edit"></i>
        <% end %>
        <%= link_to box, method: :delete, data: { confirm: 'Are you sure?' },
                    class: 'text-muted text-right' do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= render 'layouts/paginator', items_number: @boxes_count,
           current_page: @page,
           limit: @limit %>