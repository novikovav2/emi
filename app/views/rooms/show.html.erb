<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between">
  <div class="ml-0">
    <%= link_to 'Назад', rooms_path, class: 'btn btn-outline-secondary mr-2 btn-sm' %>
    <%= link_to 'Редактировать', edit_room_path(@room), class: 'btn btn-secondary btn-sm' %>
  </div>
  <div class="mr-0">
    <%= link_to 'Удалить', @room, method: :delete, data: { confirm: 'Are you sure?' },
                class: 'btn btn-outline-danger btn-sm' %>
  </div>
</div>

<div class="row mt-3">
  <div class="col-xl-12">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-6">
            <p class="mb-0 text-muted font-weight-bold text-uppercase">
              Здание
            </p>
            <p class="mb-0">
              <%= link_to @room.building.name, @room.building %>
            </p>
          </div>
          <div class="col-6">
            <p class="mb-0 text-muted font-weight-bold text-uppercase">
              Этаж
            </p>
            <p class="mb-0">
              <%= @room.floor %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row mt-3">
  <div class="col-xl-12">
    <div class="card">
      <div class="card-body">
        <div class="text-muted font-weight-bold text-uppercase">
          Монтажные шкафы
        </div>
        <table class="table table-sm table-striped mt-2">
          <thead>
          <tr>
            <th>Название</th>
          </tr>
          </thead>
          <tbody>
          <% @room.boxes.each do |box| %>
            <tr>
              <td><%= link_to box.name, box %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
