<%= form_with(model: room, local: true) do |form| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% room.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, 'Название' %>
    <%= form.text_field :name, class: 'form-control', placeholder: 'Серверная №1' %>
  </div>

  <div class="form-group">
    <%= form.label :floor, 'Этаж' %>
    <%= form.text_field :floor, class: 'form-control', placeholder: '3' %>
  </div>

  <div class="form-group">
    <%= form.label :building, 'Здание' %>
    <%= form.select :building, Building.all.collect {|x| [x.name, x.id]}, {}, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Сохранить', class: 'btn btn-primary' %>
  </div>
<% end %>
