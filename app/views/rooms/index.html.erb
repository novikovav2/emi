<p id="notice"><%= notice %></p>



<%= link_to new_room_path, class: "btn btn-outline-secondary btn-sm" do %>
  <i class="fas fa-plus"></i> Добавить
<% end %>

<div class="row mt-3">
  <div class="col-xl-12">
    <div class="card">
      <div class="card-body">
        <table class="table table-striped table-sm">
          <thead>
          <tr>
            <th>Название</th>
            <th>Здание</th>
            <th>Этаж</th>
            <th>Действия</th>
          </tr>
          </thead>

          <tbody>
          <% @rooms.each do |room| %>
            <tr>
              <td><%= link_to room.name, room %></td>
              <% if  room.building %>
                <td><%= link_to room.building.name, room.building %></td>
              <% else %>
                <td>-</td>
              <% end %>
              <td><%= room.floor %></td>
              <td>
                <%= link_to edit_room_path(room), class: 'text-muted text-right mr-3' do %>
                  <i class="far fa-edit"></i>
                <% end %>
                <%= link_to room, method: :delete, data: { confirm: 'Are you sure?' },
                            class: 'text-muted text-right' do %>
                  <i class="far fa-trash-alt"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>



<br>


