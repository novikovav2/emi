<% if @device
     @owner = @device
    @disabled = false %>
  <%= link_to 'Отмена', device_path(@device), class: 'btn btn-outline-secondary btn-sm mb-3' %>
<% else
     @owner = @patchpanel
    @disabled = true %>
  <%= link_to 'Отмена', patchpanel_path(@patchpanel), class: 'btn btn-outline-secondary btn-sm mb-3' %>
<% end %>

<div class="row">
  <div class="col-xl-12">
    <div class="card">
      <div class="card-body">
        <%= render 'form', interface: @interface, owner: @owner, disabled: @disabled %>
      </div>
    </div>
  </div>
</div>

