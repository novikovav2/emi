<table class="table table-striped table-sm">
  <thead>
  <tr>
    <th>
      <%= render 'layouts/column_header', human_name: 'Стойка', sort_name: 'from_box' %>
    </th>
    <th>
      <%= render 'layouts/column_header', human_name: 'Оборудование', sort_name: 'from_owner' %>
    </th>
    <th>
      <%= render 'layouts/column_header', human_name: 'Порт', sort_name: 'from_interface' %>
    </th>
    <th>
      <%= render 'layouts/column_header', human_name: 'Стойка', sort_name: 'to_box' %>
    </th>
    <th>
      <%= render 'layouts/column_header', human_name: 'Оборудование', sort_name: 'to_owner' %>
    </th>
    <th>
      <%= render 'layouts/column_header', human_name: 'Порт', sort_name: 'to_interface' %>
    </th>
    <th>
      <%= render 'layouts/column_header', human_name: 'Материал', sort_name: 'material' %>

    </th>
    <th>Действия</th>
  </tr>
  </thead>

  <tbody>
  <% patchcords.each do |patchcord| %>
    <tr>
      <td><%= link_to patchcord.from_node.owner.box.name, box_path(patchcord.from_node.owner.box) %></td>
      <td><%= link_to patchcord.from_node.owner.name, owner_path(patchcord.from_node.owner) %></td>
      <td><%= patchcord.from_node.name %></td>
      <td><%= link_to patchcord.to_node.owner.box.name, box_path(patchcord.from_node.owner.box) %></td>
      <td><%= link_to patchcord.to_node.owner.name, owner_path(patchcord.to_node.owner) %></td>
      <td><%= patchcord.to_node.name %></td>
      <td><%= human_material(patchcord.material) %></td>
      <td>
        <%= link_to patchcord, class: 'text-muted text-right mr-3' do %>
          <i class="far fa-eye"></i>
        <% end %>
        <%= link_to patchcord, method: :delete, data: { confirm: 'Are you sure?' },
                    class: 'text-muted text-right' do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= render 'layouts/paginator', items_number: @patchcords_count,
           current_page: @page,
           limit: @limit %>