<div class="d-flex justify-content-between">
  <div class="ml-0">
    <%= link_to 'Назад', 'javascript:history.back()', class: 'btn btn-outline-secondary mr-2 btn-sm' %>
    <%= link_to 'Редактировать', edit_patchpanel_path(@patchpanel), class: 'btn btn-secondary btn-sm' %>
  </div>
  <div class="mr-0">
    <%= link_to 'Удалить', @patchpanel, method: :delete,
                class: 'btn btn-outline-danger btn-sm' %>
  </div>
</div>

<div class="row mt-3">
  <div class="col-xl-12">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-6">
            <p class="mb-0 text-muted font-weight-bold text-uppercase">
              Стойка
            </p>
            <p class="mb-0">
              <%= link_to @patchpanel.box.name, @patchpanel.box %>
            </p>
          </div>
          <div class="col-6">
            <p class="mb-0 text-muted font-weight-bold text-uppercase">
              Тип
            </p>
            <p class="mb-0">
              <%= human_material(@patchpanel.material) %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row mt-3">
  <div class="col-xl-12">
    <div class="card">
      <div class="card-body pb-2">
        <div class="d-flex justify-content-between">
          <div class="text-muted font-weight-bold text-uppercase">
            Интерфейсы
          </div>
          <div>
            <%= link_to 'Добавить 24шт.', patchpanel_interfaces_generate_path(@patchpanel, number: 24),
                        method: :post,
                        class: 'btn btn-secondary btn-sm' %>

            <%= link_to 'Добавить 12шт.', patchpanel_interfaces_generate_path(@patchpanel, number: 12),
                        method: :post,
                        class: 'btn btn-secondary btn-sm' %>

            <%= link_to 'Добавить 6шт.', patchpanel_interfaces_generate_path(@patchpanel, number: 6),
                        method: :post,
                        class: 'btn btn-secondary btn-sm' %>

            <%= link_to 'Добавить 1шт.', new_patchpanel_interface_path(@patchpanel),
                        class: 'btn btn-secondary btn-sm' %>
          </div>
        </div>
        <%= render 'show_table', interfaces: @interfaces %>
      </div>
    </div>
  </div>
</div>