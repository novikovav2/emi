<table class="table table-striped table-sm">
  <thead>
  <tr>
    <th>
      <% if @current_sort == 'name' %>
        <%= link_to request.params.merge(sort: 'name', order: 1 - @current_order ), class: 'thead_sort' do %>
          Название <%= sort_angle(@current_order) %>
        <% end %>
      <% else %>
        <%= link_to 'Название', request.params.merge(sort: 'name', order: 0 ), class: 'thead'%>
      <% end %>
    </th>
    <th>
      <% if @current_sort == 'box' %>
        <%= link_to request.params.merge(sort: 'box', order: 1 - @current_order ), class: 'thead_sort' do %>
          Стойка <%= sort_angle(@current_order) %>
        <% end %>
      <% else %>
        <%= link_to 'Стойка', request.params.merge(sort: 'box', order: 0 ), class: 'thead'%>
      <% end %>
    </th>
    <th>К-во интерфейсов</th>
    <th>Действия</th>
  </tr>
  </thead>

  <tbody>
  <% patchpanels.each do |patchpanel| %>
    <tr>
      <td><%= link_to patchpanel.name, patchpanel %></td>
      <% if patchpanel.box %>
        <td><%= patchpanel.box.name %></td>
      <% else %>
        <td>-</td>
      <% end %>
      <td><%= patchpanel.interfaces ? patchpanel.interfaces.count : 0 %></td>
      <td>
        <%= link_to edit_patchpanel_path(patchpanel), class: 'text-muted text-right mr-3' do %>
          <i class="far fa-edit"></i>
        <% end %>
        <%= link_to patchpanel, method: :delete, data: { confirm: 'Are you sure?' },
                    class: 'text-muted text-right' do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= render 'layouts/paginator', items_number: @patchpanels_count,
           current_page: @page,
           limit: @limit %>