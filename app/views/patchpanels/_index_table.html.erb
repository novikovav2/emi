<table class="table table-striped table-sm">
  <thead>
  <tr>
    <th>
      <%= render 'layouts/column_header', human_name: 'Название', sort_name: 'name' %>
    </th>
    <th>
      <%= render 'layouts/column_header', human_name: 'Стойка', sort_name: 'box' %>
    </th>
    <th>К-во интерфейсов</th>
    <th>Действия</th>
  </tr>
  </thead>
  <tbody>
  <% patchpanels.each do |patchpanel| %>
    <tr>
      <td><%= link_to patchpanel.name, patchpanel %></td>
      <% if patchpanel.box %>
        <td><%= patchpanel.box.name %></td>
      <% else %>
        <td>-</td>
      <% end %>
      <td><%= patchpanel.interfaces ? patchpanel.interfaces.count : 0 %></td>
      <td>
        <%= link_to edit_patchpanel_path(patchpanel), class: 'text-muted text-right mr-3' do %>
          <i class="far fa-edit"></i>
        <% end %>
        <%= link_to patchpanel, method: :delete, data: { confirm: 'Are you sure?' },
                    class: 'text-muted text-right' do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= render 'layouts/paginator', items_number: @patchpanels_count,
           current_page: @page,
           limit: @limit %>