<table class="table table-sm table-striped mt-2">
  <thead>
  <tr>
    <th>
      <%= render 'layouts/column_header', human_name: 'Название', sort_name: 'name' %>
    </th>
    <th>
      <%= render 'layouts/column_header', human_name: 'Патчкордом подключен в', sort_name: 'connected' %>
    </th>
    <th>
      СКС связан с
    </th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% interfaces.each do |interface| %>
    <tr>
      <td><%= interface.name %></td>
      <td>
        <% if interface.patchcorded_to %>
          <%= link_to interface.patchcorded_to.owner.box.name, box_path(interface.patchcorded_to.owner.box) %>
          <i class="fas fa-long-arrow-alt-right"></i>
          <%= link_to interface.patchcorded_to.owner.name, owner_path(interface.patchcorded_to.owner) %>
          <i class="fas fa-long-arrow-alt-right"></i>
          <%= interface.patchcorded_to.name %>
        <% end %>
      </td>
      <td>
        <% if interface.sks_to %>
          <%= link_to interface.sks_to.owner.box.name, box_path(interface.sks_to.owner.box) %>
          <i class="fas fa-long-arrow-alt-right"></i>
          <%= link_to interface.sks_to.owner.name, owner_path(interface.sks_to.owner) %>
          <i class="fas fa-long-arrow-alt-right"></i>
          <%= interface.sks_to.name %>
        <% end %>
      </td>
      <td>
        <%= link_to edit_patchpanel_interface_path(@patchpanel, interface), class: 'text-muted text-right mr-3' do %>
          <i class="far fa-edit"></i>
        <% end %>
        <%= link_to patchpanel_interface_path(@patchpanel, interface),
                    method: :delete, data: { confirm: 'Are you sure?' },
                    class: 'text-muted text-right',
                    remote: true do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= render 'layouts/paginator', items_number: @interfaces_count,
           current_page: @page,
           limit: @limit %>